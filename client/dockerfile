# ----------------------------------------------------------------------
# Stage 1: Build Stage (Handles Dependencies and Compilation)
# ----------------------------------------------------------------------
FROM node:20-alpine AS builder

# Set working directory inside the container
WORKDIR /app

# Copy package.json and package-lock.json (or yarn.lock)
COPY package.json package-lock.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application code
COPY . .

# Build the Next.js application
# This includes compiling the code and optimizing assets
RUN npm run build

# ----------------------------------------------------------------------
# Stage 2: Production/Runtime Stage (Minimal Image for Running)
# ----------------------------------------------------------------------
FROM node:20-alpine AS runner

# Set environment variables for Next.js runtime
ENV NODE_ENV production
ENV PORT 3000

WORKDIR /app

# Copy necessary files from the builder stage
# Copy built Next.js assets, public directory, and package files
COPY --from=builder /app/public ./public
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./package.json

# Expose the port (3000 is default for Next.js)
EXPOSE 3000

# Command to start the application
CMD ["npm", "start"]