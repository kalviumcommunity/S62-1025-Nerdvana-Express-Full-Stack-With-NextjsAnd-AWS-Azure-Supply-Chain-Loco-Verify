// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --- ENUMS (Constraints/Status) ---
enum Role {
  VENDOR
  ADMIN
}

enum LicenseStatus {
  PENDING
  APPROVED
  REJECTED
  EXPIRED
}

// --- CORE MODELS (Normalized Tables) ---

model User {
  id        String   @id @default(uuid()) 
  email     String   @unique 
  password  String
  name      String?
  phone     String?
  shopName  String?
  role      Role     @default(VENDOR)
  createdAt DateTime @default(now())
  licenses  License[] 
}

model License {
  id               String         @id @default(uuid())
  licenseType      String
  status           LicenseStatus  @default(PENDING)
  applicationDate  DateTime       @default(now())
  issueDate        DateTime?
  expiryDate       DateTime?
  vendorId         String
  vendor           User           @relation(fields: [vendorId], references: [id])
  idProofLink      String?
  shopPhotoLink    String?

  @@index([vendorId])
  @@index([status])
}