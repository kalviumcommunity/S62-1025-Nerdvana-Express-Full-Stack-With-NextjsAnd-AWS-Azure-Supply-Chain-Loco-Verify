// Define PostgreSQL connection and Prisma client
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// MODELS (Tables)
model Vendor {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  phone        String
  shopName     String
  license      License?
  createdAt    DateTime   @default(now())
}

model License {
  id           Int        @id @default(autoincrement())
  licenseNo    String     @unique
  issueDate    DateTime
  expiryDate   DateTime
  status       String
  vendorId     Int        @unique
  vendor       Vendor     @relation(fields: [vendorId], references: [id], onDelete: Cascade)
}
